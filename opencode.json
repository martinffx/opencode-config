{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "opencode/glm-4.6",
  "autoupdate": true,
  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/glm-4.6"
    },
    "plan": {
      "mode": "primary",
      "model": "opencode/glm-4.6"
    }
  },
  "mcp": {
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/code"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"]
    },
    "fetch": {
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-ff468caa-1543-4877-9c3e-1a0390476b41"
      },
      "enabled": true
    }
  }
}
