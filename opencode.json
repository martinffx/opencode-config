{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-5",
  "autoupdate": true,
  "keybinds": {
    "command_list": "<leader>p",
    "history_previous": "up,ctrl+p",
    "history_next": "down,ctrl+n",
    "messages_half_page_up": "ctrl+u,ctrl+alt+u",
    "messages_page_up": "pageup,alt+v",
    "messages_page_down": "pagedown,ctrl+v",
    "input_clear": "ctrl+c,ctrl+g"
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5"
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-opus-4-5",
      "reasoning": {
        "enabled": true
      },
      "permissions": {
        "read": "allow",
        "write": "deny",
        "bash": "ask",
        "tools": "allow",
        "allowed": ["sequential-thinking", "memory", "fetch", "context7"]
      }
    }
  },
  "mcp": {
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/code"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"]
    },
    "fetch": {
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-be936a83-6a34-4903-8504-48ce3943c13f"
      },
      "enabled": true
    }
  }
}
